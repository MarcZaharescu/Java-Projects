		System.out.println(value[0]);
//		System.setProperty("jdbc.drivers", "org.postgresql.Driver");
////		String dbName = "jdbc:postgresql://dbteach2/cs.bham.ac.uk/" + value[1];
//		Connection dbConn = null; 
